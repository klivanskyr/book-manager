{
  "rules": {
    "users": {
      ".indexOn": ["email", ".value"]
    },
    "books": {
      ".indexOn": "key"
    },
    "usersBooks": {
      
      "$userId" : {
        "$bookId": {
          ".indexOn": ["title, author, createdAt"]
        }
      },
        
      ".indexOn": "bookId"
    },
    ".read": true,
    ".write": true
  }
}
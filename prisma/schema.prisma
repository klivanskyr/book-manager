generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  password  String
  email     String      @unique
  createdAt DateTime    @default(now())
  Review    Review[]
  User_book User_book[]
}

model Book {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  key       String      @unique
  title     String
  author    String
  isbn      String      @unique
  cover     String      @default("")
  r         Int         @default(127)
  g         Int         @default(127)
  b         Int         @default(127)
  createdAt DateTime    @default(now())
  Review    Review[]
  User_book User_book[]
}

model User_book {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  bookId    String   @db.ObjectId
  createdAt DateTime @default(now())
  Book      Book     @relation(fields: [bookId], references: [id])
  User      User     @relation(fields: [userId], references: [id])

  @@unique([bookId, userId])
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  bookId    String   @db.ObjectId
  rating    Int
  review    String   @default("")
  createdAt DateTime @default(now())
  book      Book     @relation(fields: [bookId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([bookId, userId])
}

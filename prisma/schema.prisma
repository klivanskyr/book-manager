generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  username  String
  password  String
  email     String      @unique
  createdAt DateTime    @default(now())
  Review    Review[]
  User_book User_book[]
}

model Book {
  id        Int         @id @default(autoincrement())
  key       String      @unique
  title     String
  author    String
  isbn      String      @unique
  cover     String      @default("")
  r         Int         @default(127)
  g         Int         @default(127)
  b         Int         @default(127)
  createdAt DateTime    @default(now())
  Review    Review[]
  User_book User_book[]
}

model User_book {
  id        Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  createdAt DateTime @default(now())
  Book      Book     @relation(fields: [bookId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
  @@unique([bookId, userId])
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  rating    Int
  review    String   @default("")
  createdAt DateTime @default(now())
  book      Book     @relation(fields: [bookId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  @@unique([bookId, userId])
}

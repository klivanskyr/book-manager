generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  username  String
  password  String
  email     String      @unique
  createdAt DateTime    @default(now())
  User_book User_book[]
  Review    Review[]
}

model Book {
  id        Int         @id @default(autoincrement())
  key       String      @unique
  title     String
  author    String
  isbn      Int         @unique
  createdAt DateTime    @default(now())
  User_book User_book[]
  Review    Review[]
}

model User_book {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  createdAt DateTime @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  rating    Int
  review    String
  createdAt DateTime @default(now())
}
